# Build-Report Environment Configuration
# Copy this file to .env and fill in the values

# Database
DATABASE_PATH=/opt/stroykontrol/database/stroykontrol.db

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=https://build-report.ru

# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here
MANAGER_USER_IDS=123456789,987654321

# Yandex Disk
YANDEX_DISK_TOKEN=your_yandex_disk_token_here
YANDEX_DISK_BASE_FOLDER=StroyKontrol
YANDEX_DISK_PEOPLE_REPORTS_FOLDER=Фото отчеты (Люди)

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# VAT Rate (0.2 = 20%)
VAT_RATE=0.2

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/stroykontrol.log

# Timezone
TIMEZONE=Europe/Moscow
