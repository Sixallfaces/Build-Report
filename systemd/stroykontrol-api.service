[Unit]
Description=Stroykontrol API Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/stroykontrol/app
Environment=PATH=/opt/stroykontrol/venv/bin
EnvironmentFile=/opt/stroykontrol/.env
ExecStart=/opt/stroykontrol/venv/bin/uvicorn api_server:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
